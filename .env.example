# Django Settings for Infomaniak Deployment

# Security Settings
SECRET_KEY=your-secret-key-here-generate-a-new-one-for-production
DEBUG=False

# Allowed Hosts - Add your domain(s) separated by commas
# Example: ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (if using MySQL/PostgreSQL on Infomaniak)
# For SQLite, leave these commented
# DATABASE_ENGINE=django.db.backends.mysql
# DATABASE_NAME=your_database_name
# DATABASE_USER=your_database_user
# DATABASE_PASSWORD=your_database_password
# DATABASE_HOST=your_database_host
# DATABASE_PORT=3306

# Static and Media Files
# STATIC_URL=/static/
# MEDIA_URL=/media/
